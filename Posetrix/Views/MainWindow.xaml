<Window
    x:Class="Posetrix.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Posetrix"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Posetrix"
    Width="400"
    Height="600"
    ResizeMode="CanResize"
    ThemeMode="Light"
    mc:Ignorable="d">
    <Grid Margin="20" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                Text="Add your reference images" />
            <Button
                Grid.Row="1"
                Height="46"
                HorizontalAlignment="Stretch"
                Content="&#xE710;"
                FontFamily="{StaticResource SymbolThemeFontFamily}"
                FontSize="20"
                Style="{DynamicResource AccentButtonStyle}" />
            <TextBlock
                Grid.Row="2"
                HorizontalAlignment="Center"
                Text="100 images" />
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                Style="{StaticResource TitleTextBlockStyle}"
                Text="Practice modes" />
            <ComboBox
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                SelectedIndex="0">
                <ComboBoxItem Content="Timed practice" />
                <ComboBoxItem Content="Class mode" />
                <ComboBoxItem Content="Custom mode" />

            </ComboBox>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
                <ToggleButton Content="30s" />
                <ToggleButton Content="45s" />
                <ToggleButton Content="1m" />
                <ToggleButton Content="2m" />
                <ToggleButton Content="5m" />
                <ToggleButton Content="10m" />
                <ToggleButton Content="Custom" />
            </StackPanel>


            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Grid.Column="0"
                    Height="30"
                    Margin="0,0,10,0"
                    Text="Hours" />
                <TextBox
                    Grid.Column="1"
                    Height="30"
                    Margin="0,0,10,0"
                    Text="Minutes" />
                <TextBox
                    Grid.Column="2"
                    Height="30"
                    Text="Seconds" />
            </Grid>
        </Grid>
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Style="{StaticResource BodyTextBlockStyle}"
                Text="I want to draw" />
            <TextBox Text="Images" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <TextBlock
                Margin="0,0,10,0"
                VerticalAlignment="Center"
                Text="Shuffle images" />
            <CheckBox />
        </StackPanel>
        <Button
            Grid.Row="4"
            Height="46"
            HorizontalAlignment="Stretch"
            Content="Start a drawing session"
            Style="{DynamicResource AccentButtonStyle}" />
    </Grid>
</Window>
