<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lucideAvalonia="clr-namespace:LucideAvalonia;assembly=LucideAvalonia">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
            <StackPanel Orientation="Horizontal">
                <TextBlock>
                    This is a text
                </TextBlock>
                <Button Classes="big">
                    <lucideAvalonia:Lucide Icon="Ambulance"></lucideAvalonia:Lucide>
                </Button>
                <Button Classes="big" Content="WOR"></Button>
                <Button Classes="small">
                    <lucideAvalonia:Lucide Icon="Angry"></lucideAvalonia:Lucide>
                </Button>
                <Button Classes="small" Content="W"></Button>
                <Button Classes="icon transparent">
                    <lucideAvalonia:Lucide Icon="Settings" Height="20" Width="20"></lucideAvalonia:Lucide>
                </Button>
                <Button Classes="accent-button">
                    Text
                </Button>
            </StackPanel>
        </Border>
    </Design.PreviewWith>
    <!-- Add Styles Here -->
    
    <!-- Fonts. -->
    <Style Selector="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource CustomTextFont}"></Setter>
    </Style>
    <Style Selector="Button">
        <Setter Property="FontFamily" Value="{StaticResource CustomTextFont}"></Setter>
    </Style>
    <Style Selector="ToggleButton">
        <Setter Property="FontFamily" Value="{StaticResource CustomTextFont}"></Setter>
    </Style>
    <Style Selector="TitleBar">
        <Setter Property="FontFamily" Value="{DynamicResource UbuntuFont}"></Setter>
    </Style>

    <!-- Dynamic icons color. -->
    <Style Selector="lucideAvalonia|Lucide">
        <Setter Property="StrokeBrush" Value="{DynamicResource SystemControlForegroundBaseHighBrush}" />
    </Style>
    
    <!-- Buttons. -->
    <Style Selector="Button.small">
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="Margin" Value="4 0" />
    </Style>
    <Style Selector="Button.big">
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Margin" Value="4 0" />
    </Style>

    <Style Selector="Button.icon">
        <Setter Property="RenderTransform" Value="scale(1)"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
    </Style>

    <Style Selector="Button.transparent">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="Button.transparent:pointerover">
        <Setter Property="RenderTransform" Value="scale(1.2)" />
    </Style>

    <Style Selector="Button.transparent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style Selector="Button.accent-button">
        <Setter Property="Background" Value="{DynamicResource AccentButtonBackground}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource AccentButtonForeground}"></Setter>
    </Style>
    <Style Selector="Button.accent-button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColorLight1}"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource AccentButtonForeground}"></Setter>

    </Style>
</Styles>