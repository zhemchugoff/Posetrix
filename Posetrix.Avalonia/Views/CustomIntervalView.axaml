<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Posetrix.Core.ViewModels"
             mc:Ignorable="d"
             x:Class="Posetrix.Avalonia.Views.CustomIntervalView"
             x:DataType="vm:CustomIntervalViewModel">
    <Design.DataContext>
        <vm:CustomIntervalViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="*,*,*">
        <TextBox
            Grid.Column="0"
            Height="30"
            Margin="0,0,10,0"
            Text="{Binding SessionTimer.Hours}" />
        <TextBox
            Grid.Column="1"
            Height="30"
            Margin="0,0,10,0"
            Text="{Binding SessionTimer.Minutes}" />
        <TextBox
            Grid.Column="2"
            Height="30"
            Text="{Binding SessionTimer.Seconds}" />
    </Grid>
</UserControl>